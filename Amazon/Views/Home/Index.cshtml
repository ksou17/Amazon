@{
}

@model BooksViewModel

<h1 style="color:orange; font-family:Candara">Welcome to Amazon</h1>

@foreach (Book b in Model.Books)
            {
                <h3 style="font-family:Candara">@b.Title</h3>

                <ul style="font-family:Candara">
                    <li>Author: @b.Author</li>
                    <li>Publisher: @b.Publisher</li>
                    <li>Isbn: @b.Isbn</li>
                    <li>Classification: @b.Classification</li>
                    <li>Category: @b.Category</li>
                    <li>Pages: @b.PageCount</li>
                    <li>Price: <span style="color:forestgreen">$@b.Price</span></li>
                </ul>
                <br />

            }

<div page-model="@Model.PageInfo" page-action="Index"></div>